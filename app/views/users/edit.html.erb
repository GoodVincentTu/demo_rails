<h1>Edit User Information</h1>

<%= form_for @user, url: {action: "update"} do |f| %>
  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  Email : <%= f.email_field :email, placeholder: @user.email, disabled: true %>
  <br>
  User Name : <%= f.text_field :username, placeholder: @user.username, minlength: 5 %>
  <br>
  Password : <%= f.password_field :password %>
  <br>
  Password Confirmation : <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit 'Save' %>
<% end %>